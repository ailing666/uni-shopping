.category .content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  top: 100rpx;
  left: 0;
  right: 0;
  bottom: 0;
}
.category .content .list {
  width: 198rpx;
  background-color: #f5f5f5;
  color: #434345;
  overflow: scroll;
}
.category .content .list view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  text-align: center;
  height: 120rpx;
}
.category .content .list view text {
  width: 198rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-left: 8rpx solid transparent;
}
.category .content .list .active {
  background-color: #FFFFFF;
  color: #ff2d4a;
}
.category .content .list .active text {
  font-weight: 700;
  border-left: 8rpx solid #ff3954;
}
.category .content .details {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  color: #434345;
  overflow: scroll;
}
.category .content .details .title-img {
  height: 180rpx;
  width: 520rpx;
  margin: 20rpx;
}
.category .content .details .details-title {
  width: 100%;
  text-align: center;
  height: 110rpx;
  line-height: 110rpx;
  color: #e3e3e3;
}
.category .content .details .details-title .cat-name {
  color: #434345;
  margin: 0 30rpx;
}
.category .content .details .details-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.category .content .details .details-item view {
  width: 33.33%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 10rpx 0;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.category .content .details .details-item view image {
  width: 120rpx;
  height: 120rpx;
}

