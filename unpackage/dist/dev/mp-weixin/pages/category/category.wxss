.category {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.category .list {
  width: 200rpx;
  background-color: #f5f5f5;
  color: #434345;
}
.category .list view {
  text-align: center;
  height: 120rpx;
}
.category .list view text {
  display: inline-block;
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
}
.category .list .active {
  background-color: #FFFFFF;
  color: #ff2d4a;
  font-weight: 700;
  border-left: 6rpx solid #ff3954;
}
.category .details {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  color: #434345;
}
.category .details .title-img {
  height: 200rpx;
  width: 93%;
  margin: 20rpx;
}
.category .details .details-title {
  width: 100%;
  text-align: center;
  margin: 40rpx 0;
}
.category .details .details-title::before {
  content: "/　　　";
  color: #e3e3e3;
}
.category .details .details-title::after {
  content: "　　　/";
  color: #e3e3e3;
}
.category .details .details-title .cat-name {
  color: #434345;
}
.category .details .details-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.category .details .details-item view {
  width: 33.33%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.category .details .details-item view image {
  width: 100rpx;
  height: 130rpx;
}

